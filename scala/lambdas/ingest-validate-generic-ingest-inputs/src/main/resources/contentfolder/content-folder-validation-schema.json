{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Content Folder validation",
  "description": "All Content folders that are checked by this schema must have these properties",
  "properties": {
    "series": {
      "type": "string",
      "$comment": "(Optional) If the Content Folder is the top-level entry in the JSON, then it will have a Series",
      "pattern": "^([A-Z]{1,4} [1-9][0-9]{0,3}|Unknown|MOCK1 123)$",
      "minLength": 1
    },
    "id_Code": {
      "type": "string",
      "minLength": 1
    },
    "id_URI": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "title",
    "name"
  ],
  "additionalProperties": {
    "minLength": 1,
    "minItems": 1
  },
  "propertyNames": {
    "pattern": "[A-Za-z0-9]"
  }
}