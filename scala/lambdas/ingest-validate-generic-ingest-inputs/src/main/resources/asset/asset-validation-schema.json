{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Asset validation",
  "description": "All Assets that are checked by this schema must have these properties",
  "properties": {
    "originalFiles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "originalMetadataFiles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "transferringBody": {
      "type": "string"
    },
    "transferCompleteDatetime": {
      "type": "string",
      "minLength": 1
    },
    "upstreamSystem": {
      "type": "string",
      "minLength": 1
    },
    "digitalAssetSource": {
      "type": "string",
      "minLength": 1
    },
    "digitalAssetSubtype": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "id_BornDigitalRef": {
      "type": "string",
      "minLength": 1
    },
    "id_ConsignmentReference": {
      "type": "string",
      "minLength": 1
    },
    "id_RecordID": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "parentId": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "description": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 0
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "const": "Asset"
    },
    "series": {
      "$comment": "(Optional) If the Asset is the top-level entry in the JSON, then it will have a Series",
      "type": "string",
      "pattern": "^([A-Z]{1,4} [1-9][0-9]{0,3}|Unknown|MOCK1 123)$",
      "minLength": 1
    },
    "correlationId": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "id_BornDigitalRef",
    "id_ConsignmentReference",
    "id_RecordID",
    "title"
  ],
  "additionalProperties": {
    "minLength": 1,
    "minItems": 1
  },
  "propertyNames": {
    "pattern": "[A-Za-z0-9]"
  }
}