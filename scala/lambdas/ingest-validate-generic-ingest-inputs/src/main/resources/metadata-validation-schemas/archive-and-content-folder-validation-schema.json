{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Content/Archive Folder validation",
  "description": "All Content/Archive folders that are checked by this schema must have these properties",
  "properties": {
    "series": {
      "type": "string",
      "$comment": "(Optional) If the Content/Archive Folder is the top-level entry in the JSON, then it will have a Series",
      "pattern": "^([A-Z]{1,4} [1-9][0-9]{0,3}|Unknown)$",
      "minLength": 1
    },
    "id_Code": {
      "type": "string",
      "minLength": 1
    },
    "id_URI": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "parentId": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "title": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": [
        "ArchiveFolder",
        "ContentFolder"
      ]
    },
    "name": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "id_Code",
    "id",
    "parentId",
    "title",
    "type",
    "name"
  ],
  "additionalProperties": {
    "minLength": 1,
    "minItems": 1
  },
  "propertyNames": {
    "pattern": "[A-Za-z0-9]"
  }
}