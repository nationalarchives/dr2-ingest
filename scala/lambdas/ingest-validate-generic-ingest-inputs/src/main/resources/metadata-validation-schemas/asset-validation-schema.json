{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Asset validation",
  "description": "All Assets that are checked by this schema must have these properties",
  "properties": {
    "originalFiles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "originalMetadataFiles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "transferringBody": {
      "type": "string",
      "minLength": 1
    },
    "transferCompleteDatetime": {
      "type": "string",
      "minLength": 1
    },
    "upstreamSystem": {
      "type": "string",
      "minLength": 1
    },
    "digitalAssetSource": {
      "type": "string",
      "minLength": 1
    },
    "digitalAssetSubtype": {
      "type": "string",
      "minLength": 1
    },
    "id_BornDigitalRef": {
      "type": "string",
      "minLength": 1
    },
    "id_ConsignmentReference": {
      "type": "string",
      "minLength": 1
    },
    "id_RecordID": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "parentId": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "const": "Asset"
    },
    "name": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "originalFiles",
    "originalMetadataFiles",
    "transferringBody",
    "transferCompleteDatetime",
    "upstreamSystem",
    "digitalAssetSource",
    "digitalAssetSubtype",
    "id_BornDigitalRef",
    "id_ConsignmentReference",
    "id_RecordID",
    "id",
    "parentId",
    "title",
    "type",
    "name"
  ],
  "additionalProperties": true
}